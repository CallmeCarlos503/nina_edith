<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="col-sm-10">
    <!--Barra de navegacion-->
    <nav class="navbar navbar-expand-lg navbar-dark navprincipal">
        <div class="container-fluid lg">
            <a class="navbar-brand text-light" href="#">Cine +</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <li class="nav-link">@Html.ActionLink("Peliculas","Index")</li>
                    <li class="nav-link">@Html.ActionLink("Estadisticas", "Estadisticas")</li>
                    <li class="nav-link">@Html.ActionLink("Acerca de","Acerca")</li>
                </div>
            </div>
        </div>
    </nav>
    <!--Banner-->
    <div class="banner">
        <img class="banner" src="~/Content/img/banner.jpg" alt="">
    </div>
    <!--Cuerpo de la pagina-->
    <div class="row centered bg-light">
        @RenderBody()
    </div>
    <!--Pie de pagina-->
    <footer id="footer" class="text-light py-3 px-3">
        <div>
            Universidad Don Bosco | Derechos reservados 2022
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/mybundle")
    @RenderSection("scripts", required: false)
</body>
</html>
